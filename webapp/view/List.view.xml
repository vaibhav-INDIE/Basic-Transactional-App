<mvc:View
    controllerName="demo.productapp.productapp.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page
        id="demo.productapp.productapp::List--Page"
        title="Products">

        <headerContent>

            <VBox
                class="sapUiSmallMargin"
                id="demo.productapp.productapp::Menu--one">
                <Button
                    id="button"
                    text="View Actions"
                    press="onPress"
                    ariaHasPopup="Menu"/>
            </VBox>

            <Button
                id="demo.productapp.productapp::List--BtnAdd"
                text="Add Product"
                type="Emphasized"
                press=".onAdd"/>

            <Button
                id="demo.productapp.productapp::List--BtnDelete"
                text="Delete Selected"
                type="Negative"
                press=".onDelete"/>

        </headerContent>

        <content>
            <Table
                id="demo.productapp.productapp::List--Table"
                mode="MultiSelect"
                items="{path: 'data>/products'}">

                <columns>
                    <Column id="demo.productapp.productapp::List--ColID">
                        <Text id="_IDGenText1" text="ID"/>
                    </Column>

                    <Column id="demo.productapp.productapp::List--ColName">
                        <Text id="_IDGenText2" text="Name"/>
                    </Column>

                    <Column id="demo.productapp.productapp::List--ColPrice">
                        <Text id="_IDGenText3" text="Price"/>
                    </Column>

                    <Column id="demo.productapp.productapp::List--ColStock">
                        <Text id="_IDGenText4" text="Stock"/>
                    </Column>

                    <Column id="demo.productapp.productapp::List--ColDetails">
                        <Text id="_IDGenText5" text=""/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="demo.productapp.productapp::List--RowTemplate">
                        <cells>
                            <Text id="_IDGenText6" text="{data>id}"/>
                            <Text id="_IDGenText7" text="{data>name}"/>
                            <Text id="_IDGenText8" text="{data>price}"/>
                            <Text id="_IDGenText9" text="{data>stock}"/>

                            <Button
                                id="demo.productapp.productapp::List--BtnRowDetails"
                                text="View"
                                type="Transparent"
                                press=".onRowDetails"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>

    </Page>

</mvc:View>
