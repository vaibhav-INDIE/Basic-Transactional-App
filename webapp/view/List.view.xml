<mvc:View
    controllerName="demo.productapp.productapp.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page
        id="demo.productapp.productapp::List--Page"
        title="Products">

        <headerContent>

            <VBox
                class="sapUiSmallMargin"
                id="demo.productapp.productapp::Menu--one">
                <Button
                    id="button"
                    text="View Actions"
                    press="onPress"
                    ariaHasPopup="Menu"/>
            </VBox>

            <Button
                id="demo.productapp.productapp::List--BtnAdd"
                text="Add Product"
                type="Emphasized"
                press="onAdd"/>

            <Button
                id="demo.productapp.productapp::List--BtnDelete"
                text="Delete Selected"
                type="Negative"
                press="onDelete"/>

            <Button
                id="demo.productapp.productapp::List--Logout"
                text="Logout"
                press="logoff"/>

        </headerContent>

        <content>
            <Table
                id="demo.productapp.productapp::List--Table"
                mode="MultiSelect"
                items="{/Products}">

                <columns>
                    <Column id="_IDGenColumn1"><Text id="_IDGenText"  text="Product ID"/></Column>
                    <Column id="_IDGenColumn2"><Text id="_IDGenText1" text="Name"/></Column>
                    <Column id="_IDGenColumn3"><Text id="_IDGenText2" text="Price"/></Column>
                    <Column id="_IDGenColumn4"><Text id="_IDGenText3" text="Stock"/></Column>
                    <Column id="_IDGenColumn5"><Text id="_IDGenText4" text=""/></Column>
                </columns>

                <items>
                    <ColumnListItem id="demo.productapp.productapp::List--RowTemplate">
                        <cells>
                            <Text id="_IDGenText5" text="{ProductID}"/>
                            <Text id="_IDGenText6" text="{Name}"/>
                            <Text id="_IDGenText7" text="{Price}"/>
                            <Text id="_IDGenText8" text="{Stock}"/>

                            <Button
                                id="demo.productapp.productapp::List--BtnRowDetails"
                                text="View"
                                type="Transparent"
                                press="onRowDetails"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>

    </Page>

</mvc:View>
