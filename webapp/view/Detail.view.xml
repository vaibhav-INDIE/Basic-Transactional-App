<mvc:View
    controllerName="demo.productapp.productapp.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">

    <Page
        id="demo.productapp.productapp::Detail--Page"
        title="Product Details"
        showNavButton="true"
        navButtonPress=".onNavBack">

        <content>
            <form:SimpleForm
                id="demo.productapp.productapp::Detail--Form"
                editable="false">

                <Label
                    id="demo.productapp.productapp::Detail--LblID"
                    text="ID"/>
                <Text
                    id="demo.productapp.productapp::Detail--TxtID"
                    text="{data>id}"/>

                <Label
                    id="demo.productapp.productapp::Detail--LblName"
                    text="Name"/>
                <Text
                    id="demo.productapp.productapp::Detail--TxtName"
                    text="{data>name}"/>

                <Label
                    id="demo.productapp.productapp::Detail--LblPrice"
                    text="Price"/>
                <Text
                    id="demo.productapp.productapp::Detail--TxtPrice"
                    text="{data>price}"/>

                <Label
                    id="demo.productapp.productapp::Detail--LblStock"
                    text="Stock"/>
                <Text
                    id="demo.productapp.productapp::Detail--TxtStock"
                    text="{data>stock}"/>

            </form:SimpleForm>
        </content>

    </Page>
</mvc:View>
